{
  "name": "vtdr-root",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:contract:theme-runtime": "turbo test --filter=@vtdr/api -- --run src/integration/theme-runtime-contract.integration.test.ts",
    "lint": "turbo lint",
    "guard:runtime-boundaries": "node tools/architecture/runtime-boundary-guard.mjs",
    "data:harden:check": "npm exec tsx tools/data-hardening/harden-store-data.mts",
    "data:harden": "npm exec tsx tools/data-hardening/harden-store-data.mts -- --write",
    "docs:sync": "node tools/doc-drift/doc-drift.mjs sync",
    "docs:drift": "node tools/doc-drift/doc-drift.mjs check",
    "docs:traceability": "node tools/doc-drift/traceability-guard.mjs",
    "contracts:coverage:guard": "node tools/parity/salla-contract-coverage-guard.mjs",
    "perf:preview:baseline": "node tools/perf/preview-baseline.mjs",
    "parity:baseline:gate": "node tools/perf/parity-baseline-gate.mjs",
    "validate": "npm run docs:drift && npm run docs:traceability && npm run contracts:coverage:guard && npm run guard:runtime-boundaries && npm run build && npm run lint && npm run test && npm run parity:baseline:gate",
    "studio": "turbo studio --filter=@vtdr/data",
    "clean": "node cleaning-audit.js",
    "test:e2e:preview": "playwright test --config apps/ui/playwright.config.ts",
    "test:e2e:preview:headed": "playwright test --config apps/ui/playwright.config.ts --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/node": "22.13.4",
    "@types/react-router-dom": "5.3.3",
    "@vitest/ui": "^4.0.18",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-http-proxy": "^2.1.2",
    "lucide-react": "^0.564.0",
    "nodemon": "^3.1.11",
    "path-to-regexp": "^6.3.0",
    "prisma": "^5.22.0",
    "react-router-dom": "^7.13.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.8.9",
    "typescript": "5.7.3",
    "vite": "^5.4.21",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@jridgewell/sourcemap-codec": "^1.5.5",
    "@vtdr/contracts": "^1.0.0",
    "@vtdr/data": "^1.0.0",
    "@vtdr/engine": "^1.0.0",
    "better-sqlite3": "^12.6.2",
    "effect": "^3.19.17",
    "iconv-lite": "^0.7.2"
  }
}
